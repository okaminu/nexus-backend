<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd"
       default-lazy-init="true" default-autowire="constructor">

    <context:component-scan base-package="lt.boldadmin.nexus.plugin.mongodb">
        <context:include-filter type="regex" expression="lt.boldadmin.nexus.plugin.mongodb.repository.adapter.*"/>
    </context:component-scan>

</beans>